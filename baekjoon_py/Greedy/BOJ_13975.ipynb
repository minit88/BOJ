        "import heapq\n",
        "\n",
        "t = int(input())\n",
        "for _ in range(t):\n",
        "  n = int(input())\n",
        "  result = 0\n",
        "  heap = list(map(int,input().split()))\n",
        "  heapq.heapify(heap)\n",
        "  while len(heap)>1:\n",
        "    a= heapq.heappop(heap)\n",
        "    b=heapq.heappop(heap)\n",
        "    result+=a+b\n",
        "    heapq.heappush(heap,a+b) \n",
        "  print(result)\n"
      ]
    }
